<%= form_with model: @novo_diretor, url: '/diretor' do |f|%>

<%= f.label 'Nome do Diretor:'%>
<%= f.text_field :nome%>
<br>
<br>
<%= f.label 'Nacionalidade:'%>
<%= f.text_field :nacionalidade %>
<br>
<br>
<%= f.label 'Data de Aniversário:'%>
<%= f.date_field :data_de_aniversario%>
<br>
<br>
<%= f.label 'Gênero Favorito:'%>
<%= f.collection_select  :genero_favorito_id, Genero.all, :id, :nome, {include_blank: 'Selecione um gênero'}%>
<br>
<br>
<%= f.submit 'Enviar', class: 'button_style_2'%>

<%end%>