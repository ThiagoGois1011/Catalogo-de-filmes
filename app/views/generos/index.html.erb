<div> 
    <h1>Lista de Gênero</h1>
    <button class="button_style"><%= link_to 'Criar novo gênero', new_genero_path%></button>
</div>
<br>
<br>
<div class="container_list">
    <%@generos.each do |element|%>
        <div class="item">
            <h2><%= element.nome%></h2>
            <div>
                <span class="button_style m-20"><%= link_to  'Ver', genero_path(element.id) %></span>
                <button class="button_style"><%= link_to 'Editar', edit_genero_path(element.id) %> </button> 
            </div>
        </div>
    <%end%>
</div>